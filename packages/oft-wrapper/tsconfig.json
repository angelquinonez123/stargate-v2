{
  "extends": "@layerzerolabs/typescript-config-next/library.json",
  "exclude": ["node_modules"],
  "include": ["deploy", "test/*.ts", "tasks", "ts-src", "*.config.ts"],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "mocha"]
  },
  "files": ["./type-extensions.ts"]
}
